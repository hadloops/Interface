/* pages/publish/publish.wxss */
.publish{
  display: flex;
  height: 50px;
  font-size: 14px;
  line-height: 50px;
  box-sizing: border-box;
  border-bottom: solid 1px #ccc;
  padding: 0 10px;
  color:rgba(0, 0, 0, 0.6);
}
.label{
  flex:1;
}
.content{
  flex:3;
  display: flex;
  vertical-align: center;
  align-items: center;

}
.content input{
  width: 100%
}
.btn{
  height: 50px;
  background: #ff9700;
  border-radius: 5px;
  margin: 10px;
  text-align: center;
  line-height: 50px;
  color:#fff;
}

.success{
  display: flex;
  height: 100px;
  align-items: center;
  justify-content: center;
}

.success icon{
  margin-right: 10px;
}